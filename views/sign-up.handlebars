<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <form action="/posts/new" method="post">
      <legend>Sign up</legend>
      <div class="form-group">
        <label for="post-title">Username</label>
        <input type="text" name="title" class="form-control" id="post-title" placeholder="Username">
      </div>
      <div class="form-group">
        <label for="post-summary">Password</label>
        <textarea name="summary" class="form-control" id="post-summary" placeholder="Password"></textarea>
      </div>
      <div class='text-right'>
        <button type="submit" class="btn btn-primary">Create account</button>
      </div>
    </form>
  </div>
</div>
